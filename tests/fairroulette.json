{
  "types": {
    "BetInfo": [
      {"field": "id", "type": "RequestId"},
      {"field": "sender", "type": "Agent"},
      {"field": "amount", "type": "Int"},
      {"field": "color", "type": "Int"}
    ]
  },
  "setups": {
    "default": {
      "contract": {
        "name": "fairroulette",
        "description": "Simple gambling app",
        "id": "@scId",
        "color": "#scColor",
        "owner": "@scOwner"
      },
      "account": {
        "colors": ["#iota"],
        "balance": {"#iota": 100}
      },
      "request": {
        "timestamp": 20201027172138,
        "id": "$txHash",
        "hash": "#txHash",
        "sender": "@sender"
      }
    }
  },
  "tests": [
    {
      "name": "placeOneBet",
      "setup": "default",
      "request": {
        "function": "placeBet",
        "colors": ["#iota"],
        "balance": {"#iota": 100},
        "params": {
          "color": 3
        }
      },
      "expect": {
        "account": {
          "balance": {"#iota": 200}
        },
        "state": {
          "bets": [
            {
              "BetInfo": {
                "id": "$txHash",
                "sender": "@sender",
                "amount": 100,
                "color": 3
              }
            }
          ]
        },
        "logs": {},
        "postedRequests": [{"contract": "@scId", "function": "lockBets", "delay": 120}],
        "transfers": []
      }
    },
    {
      "name": "placeTwoBets",
      "setup": "default",
      "request": {
        "function": "placeBet",
        "colors": ["#iota"],
        "balance": {"#iota": 100},
        "params": {
          "color": 3
        }
      },
      "additionalRequests": [
        {
          "timestamp": 20201027172139,
          "id": "$txHash2",
          "hash": "#txHash2",
          "sender": "@sender2",
          "function": "placeBet",
          "colors": ["#iota"],
